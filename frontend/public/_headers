# Netlify Headers Configuration
# Bu dosya Netlify'da dosya türlerine göre HTTP başlıklarını ayarlar

# EXE dosyaları için binary delivery
/exe/*
  Content-Type: application/octet-stream
  Content-Disposition: attachment
  Cache-Control: public, max-age=31536000

# VoidScanner.exe için özel ayarlar
/VoidScanner.exe
  Content-Type: application/octet-stream
  Content-Disposition: attachment
  Cache-Control: public, max-age=31536000
  X-Content-Type-Options: nosniff

# DynamicPathScanner.exe için özel ayarlar
/DynamicPathScanner.exe
  Content-Type: application/octet-stream
  Content-Disposition: attachment
  Cache-Control: public, max-age=31536000
  X-Content-Type-Options: nosniff

# SimpleScanner.exe için özel ayarlar
/SimpleScanner.exe
  Content-Type: application/octet-stream
  Content-Disposition: attachment
  Cache-Control: public, max-age=31536000
  X-Content-Type-Options: nosniff

# Diğer binary dosyalar için
/*.exe
  Content-Type: application/octet-stream
  Content-Disposition: attachment
  Cache-Control: public, max-age=31536000
  X-Content-Type-Options: nosniff

# JavaScript dosyaları için
/*.js
  Content-Type: application/javascript
  Cache-Control: public, max-age=31536000

# CSS dosyaları için
/*.css
  Content-Type: text/css
  Cache-Control: public, max-age=31536000

# HTML dosyaları için
/*.html
  Content-Type: text/html
  Cache-Control: public, max-age=3600

# JSON dosyaları için
/*.json
  Content-Type: application/json
  Cache-Control: public, max-age=3600

# Resim dosyaları için
/*.png
  Content-Type: image/png
  Cache-Control: public, max-age=31536000

/*.jpg
  Content-Type: image/jpeg
  Cache-Control: public, max-age=31536000

/*.jpeg
  Content-Type: image/jpeg
  Cache-Control: public, max-age=31536000

/*.gif
  Content-Type: image/gif
  Cache-Control: public, max-age=31536000

/*.svg
  Content-Type: image/svg+xml
  Cache-Control: public, max-age=31536000

# Güvenlik başlıkları
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
